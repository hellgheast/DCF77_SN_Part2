NAMEREG s9,REG_MONTH
NAMEREG sA,REG_YEAR
NAMEREG sB,REG_Int
NAMEREG sC,REG_TEMP

;Déclarations des variables

;Programme principal

;Initialisation
init : 

	  ;Autorisation des enables
	  ENABLE INTERRUPT 
	  
	  INPUT REG_TEST,21
	  ;Point 1
	  LOAD REG_TEMP,01
	  OUTPUT REG_TEMP,DSP_DEBUG;
	
	  TEST REG_TEST,01
	  JUMP NZ,prescaler_t
	  JUMP prescaler_n
	  
prescaler_t:
	
	  ;Point 2
	  LOAD REG_TEMP,02
	  OUTPUT REG_TEMP,DSP_DEBUG;
	
	  ;Prescaler à la valeur  400 
	  LOAD 		REG_A,90
	  OUTPUT 	REG_A,DCF_PRSCL ;
	  LOAD 		REG_A,01
	  OUTPUT 	REG_A,DCF_PRSCH ;
	  JUMP loop

prescaler_n:
	
	  ;Point 3
	  LOAD REG_TEMP,03
	  OUTPUT REG_TEMP,DSP_DEBUG;
	
	  ;Prescaler à la valeur 40'000
	  LOAD 		REG_A,40
	  OUTPUT 	REG_A,DCF_PRSCL
	  LOAD 		REG_A,9C
	  OUTPUT 	REG_A,DCF_PRSCH
	  JUMP loop

	  
	  
loop:
		
	  ;Point 5
	  LOAD REG_TEMP,05
	  OUTPUT REG_TEMP,DSP_DEBUG;
	
	  ;Affichage du bitcount
	  INPUT REG_A,DCF_BITCOUNT
	  OUTPUT REG_A,DSP_BCOUNT
	  ;Vérification si l'interruption à eu lieu
	  TEST REG_Int,01
	  JUMP NZ,send_uart
	  JUMP loop
	  
send_uart:
	  
	  
	  ;"HEURE : "
	  LOAD 	 REG_A,CHAR_H;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD   REG_A,CHAR_E;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD   REG_A,CHAR_U;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD 	 REG_A,CHAR_R;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD 	 REG_A,CHAR_E;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD   REG_A,CHAR_SPC;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD   REG_A,CHAR_doublepoint;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  LOAD   REG_A,CHAR_SPC;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  ;ENVOI DE L'HEURE
	  
	  ;PREMIER DIGIT
	  LOAD REG_A,REG_HOUR;
	  AND REG_A,F0;
	  CALL bcd_to_ascii;
	  OUTPUT REG_B,UART_ENABLE;
	  
	  ;SECOND DIGIT
	  LOAD REG_A,REG_HOUR;
	  AND REG_A,0F;
	  CALL bcd_to_ascii;
	  OUTPUT REG_B,UART_ENABLE;
	  
	  ;ESPACE 
	  LOAD   REG_A,CHAR_SPC;
	  OUTPUT REG_A,UART_ENABLE;
	  ;CARACTERE H
	  LOAD   REG_A,CHAR_H;
	  OUTPUT REG_A,UART_ENABLE;
	  ;ESPACE 
	  LOAD   REG_A,CHAR_SPC;
	  OUTPUT REG_A,UART_ENABLE;
	  
	  ;MINUTES
	  
	  ;PREMIER DIGIT
	  LOAD REG_A,REG_MINUTES;
	  AND REG_A,F0;
	  CALL bcd_to_ascii;
	  OUTPUT REG_B,UART_ENABLE;
	  
	  ;SECOND DIGIT
	  LOAD REG_A,REG_MINUTES;
	  AND REG_A,0F;
	  CALL bcd_to_ascii;
	  OUTPUT REG_B,UART_ENABLE;
	  
	  
	  
	  
	  
	  LOAD REG_Int,00;
	  JUMP loop

	  
	  ADDRESS 200	
;On utilise le REG_A pour le paramètre et le REG_B pour le résultat
bcd_to_ascii:
	  ;On compare le REG_A avec une valeur prédéfinie
	  COMPARE REG_A,00
	  JUMP Z,ascii_0
	  COMPARE REG_A,01
	  JUMP Z,ascii_1
	  COMPARE REG_A,02
	  JUMP Z,ascii_2
	  COMPARE REG_A,03
	  JUMP Z,ascii_3
	  COMPARE REG_A,04
	  JUMP Z,ascii_4
