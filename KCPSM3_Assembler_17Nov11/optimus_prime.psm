	  COMPARE REG_A,06
	  JUMP Z,ascii_6
	  COMPARE REG_A,07
	  JUMP Z,ascii_7
	  COMPARE REG_A,08
	  JUMP Z,ascii_8
	  COMPARE REG_A,09
	  JUMP Z,ascii_9
	  
	  
